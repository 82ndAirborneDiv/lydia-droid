<?xml version="1.0" encoding="utf-8"?>
<manifest package="gov.cdc.stdtxguide"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>0
    <!--
  Creates a custom permission so only this app can receive its messages.

  NOTE: the permission *must* be called PACKAGE.permission.C2D_MESSAGE,
        where PACKAGE is the application's package name.
    -->
    <permission
        android:name="gov.cdc.stdtxguide.permission.C2D_MESSAGE"
        android:protectionLevel="signature"/>

    <uses-permission android:name="gov.cdc.stdtxguide.permission.C2D_MESSAGE"/>

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <application
        android:name=".AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppCompatTheme">

        <!-- Pushwoosh -->
        <meta-data
            android:name="PW_APPID"
            android:value="57468-3DE96"/>
        <meta-data
            android:name="PW_PROJECT_ID"
            android:value="A368319224253"/>
        <meta-data
            android:name="PW_LOG_LEVEL"
            android:value="ERROR" />

        <activity android:name="com.pushwoosh.richpages.RichPageActivity"/>
        <activity android:name="com.pushwoosh.MessageActivity"/>
        <activity android:name="com.pushwoosh.PushHandlerActivity"/>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>

                <category android:name="gov.cdc.stdtxguide"/>
            </intent-filter>
        </receiver>

        <service
            android:name="com.pushwoosh.GCMListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>
        <service
            android:name="com.pushwoosh.GCMInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <service
            android:name="com.pushwoosh.GCMRegistrationService"
            android:exported="false">
        </service>
        <!-- end Pushwoosh -->
        <activity
            android:name=".ConditionListActivity"
            android:label="@string/title_activity_condition_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="gov.cdc.stdtxguide.MESSAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".WebViewActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ConditionDetailsActivity"
            android:label="@string/title_activity_condition_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
        </activity>
        <activity
            android:name=".PDFActivity"
            android:label="@string/title_activity_pdf"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
        </activity>
        <activity
            android:name=".EulaActivity"
            android:label="@string/title_activity_eula"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
